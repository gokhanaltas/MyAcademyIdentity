@model SendMessageViewModel
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-15">
    <form method="post">
        <!-- Hidden input for draft ID -->
        @if (ViewBag.DraftId != null)
        {
            <input type="hidden" name="DraftId" value="@ViewBag.DraftId" />
        }

        <div class="card card-primary card-center">
            <div class="card-header">
                <h3 class="card-title">Yeni Mail Gönder</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control" asp-for="ReceiverEmail" placeholder="Alıcı:" required>
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Subject" placeholder="Konu:">
                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="Body" required style="height: 90px"></textarea>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <div class="float-center">
                    <button type="button" class="btn btn-warning" onclick="document.querySelector('form').action='/Message/SaveDraft'; document.querySelector('form').submit();">
                        <i class="fas fa-pencil-alt"></i> Taslak
                    </button>
                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                </div>
            </div>
            <!-- /.card-footer -->
        </div>

    </form>
    <!-- /.card -->
</div>